<VBox alignment="CENTER_RIGHT" maxHeight="330.0" maxWidth="370.0" minHeight="-Infinity" minWidth="-Infinity" prefHeight="270.0" prefWidth="370.0" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.szotaksimon_etlap.HozzaAdWindowController">
    <children>
